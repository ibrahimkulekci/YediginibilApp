<!DOCTYPE html>
<html lang="tr">
<head>
    <!--=====================================
                META TAG PART START
    =======================================-->
    <!-- REQUIRE META -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- WEBPAGE TITLE -->
    <title>@ViewData["Title"] - Yediğini Bil</title>

    <!--=====================================
                CSS LINK PART START
    =======================================-->
    <!-- FAVICON -->
    <link rel="icon" href="~/theme/images/favicon.png">

    <!-- FONTS -->
    <link rel="stylesheet" href="~/theme/fonts/flaticon/flaticon.css">
    <link rel="stylesheet" href="~/theme/fonts/icofont/icofont.min.css">
    <link rel="stylesheet" href="~/theme/fonts/fontawesome/fontawesome.min.css">

    <!-- VENDOR -->
    <link rel="stylesheet" href="~/theme/vendor/venobox/venobox.min.css">
    <link rel="stylesheet" href="~/theme/vendor/slickslider/slick.min.css">
    <link rel="stylesheet" href="~/theme/vendor/niceselect/nice-select.min.css">
    <link rel="stylesheet" href="~/theme/vendor/bootstrap/bootstrap.min.css">

    <!-- CUSTOM -->
    <link rel="stylesheet" href="~/theme/css/main.css">
    <link rel="stylesheet" href="~/theme/css/index.css">
    <!--=====================================
                CSS LINK PART END
    =======================================-->
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <div class="backdrop"></div>
    <a class="backtop fas fa-arrow-up" href="#"></a>

    <!--=====================================
                HEADER PART START
    =======================================-->
    <header class="header-part">
        <div class="container">
            <div class="header-content">
                <div class="header-media-group">
                    <button class="header-user"><i class="fas fa-list"></i></button>
                    <a asp-area="" asp-controller="Home" asp-action="Index"><img src="~/theme/yediginibil.png" alt="logo" style="height: 80px;"></a>
                    <button class="header-src"><i class="fas fa-search"></i></button>
                </div>

                <a asp-area="" asp-controller="Home" asp-action="Index" class="header-logo">
                    <img src="~/theme/yediginibil.png" alt="logo" style="height: 120px;">
                </a>

                <form class="header-form" method="get" action="~/Search">
                    <input type="text" placeholder="Aradığın ürünün adı, markası veya barkod kodunu yaz..">
                    <button><i class="fas fa-search"></i></button>
                </form>
            </div>
        </div>
    </header>
    <!--=====================================
                HEADER PART END
    =======================================-->
    <!--=====================================
                NAVBAR PART START
    =======================================-->
    @await Component.InvokeAsync("HeaderMenuList", new { id=3 })
    <!--=====================================
                NAVBAR PART END
    =======================================-->
    <!--=====================================
              NAV SIDEBAR PART START
    =======================================-->
<aside class="nav-sidebar">
    <div class="nav-header">
        <a asp-area="" asp-controller="Home" asp-action="Index"><img src="~/theme/yediginibil.png" alt="logo"></a>
        <button class="nav-close"><i class="icofont-close"></i></button>
    </div>
    @await Component.InvokeAsync("SiderbarMenuList", new { id = 3 })
</aside>
    <!--=====================================
              NAV SIDEBAR PART END
    =======================================-->

    @RenderBody()

    <!--=====================================
                 FOOTER PART START
    =======================================-->
    <footer class="footer-part">
        <div class="container">
            <div class="row">
                <div class="col-sm-6 col-xl-4">
                    <div class="footer-widget">
                        <a class="footer-logo" href="#">
                            <img src="~/theme/yediginibil.png" alt="logo">
                        </a>
                        <p class="footer-desc">Adipisci asperiores ipsum ipsa repellat consequatur repudiandae quisquam assumenda dolor perspiciatis sit ipsum dolor amet.</p>
                        <ul class="footer-social">
                            <li><a class="icofont-facebook" href="#"></a></li>
                            <li><a class="icofont-twitter" href="#"></a></li>
                            <li><a class="icofont-linkedin" href="#"></a></li>
                            <li><a class="icofont-instagram" href="#"></a></li>
                            <li><a class="icofont-pinterest" href="#"></a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-sm-6 col-xl-4">
                    <div class="footer-widget contact">
                        <h3 class="footer-title">İletişim</h3>
                        <ul class="footer-contact">
                            <li>
                                <i class="icofont-ui-email"></i>
                                <p>
                                    <span>support@greeny.com</span>
                                    <span>carrer@greeny.com</span>
                                </p>
                            </li>
                            <li>
                                <i class="icofont-ui-touch-phone"></i>
                                <p>
                                    <span>+120 279 532 13</span>
                                    <span>+120 279 532 14</span>
                                </p>
                            </li>
                            <li>
                                <i class="icofont-location-pin"></i>
                                <p>1Hd- 50, 010 Avenue, NY 90001 United States</p>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="col-sm-6 col-xl-4">
                    <div class="footer-widget">
                        <h3 class="footer-title">Menüler</h3>
                        @await Component.InvokeAsync("FooterMenuList", new { id = 2 })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="footer-bottom">
                        <p class="footer-copytext">&copy;  All Copyrights Reserved by <a target="_blank" href="https://themeforest.net/user/mironcoder">Mironcoder</a></p>
                        <div class="footer-card">
                            <a href="#"><img src="~/theme/images/payment/jpg/01.jpg" alt="payment"></a>
                            <a href="#"><img src="~/theme/images/payment/jpg/02.jpg" alt="payment"></a>
                            <a href="#"><img src="~/theme/images/payment/jpg/03.jpg" alt="payment"></a>
                            <a href="#"><img src="~/theme/images/payment/jpg/04.jpg" alt="payment"></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <!--=====================================
                  FOOTER PART END
    =======================================-->
    <!--=====================================
                JS LINK PART START
    =======================================-->
    <!-- VENDOR -->
    <script src="~/theme/vendor/bootstrap/jquery-1.12.4.min.js"></script>
    <script src="~/theme/vendor/bootstrap/popper.min.js"></script>
    <script src="~/theme/vendor/bootstrap/bootstrap.min.js"></script>
    <script src="~/theme/vendor/countdown/countdown.min.js"></script>
    <script src="~/theme/vendor/niceselect/nice-select.min.js"></script>
    <script src="~/theme/vendor/slickslider/slick.min.js"></script>
    <script src="~/theme/vendor/venobox/venobox.min.js"></script>

    <!-- CUSTOM -->
    <script src="~/theme/js/nice-select.js"></script>
    <script src="~/theme/js/countdown.js"></script>
    <script src="~/theme/js/accordion.js"></script>
    <script src="~/theme/js/venobox.js"></script>
    <script src="~/theme/js/slick.js"></script>
    <script src="~/theme/js/main.js"></script>
    <!--=====================================
                JS LINK PART END
    =======================================-->
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
