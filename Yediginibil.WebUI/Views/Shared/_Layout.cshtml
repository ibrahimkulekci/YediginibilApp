                                    <li><a href="blog-author.html">blog author</a></li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </nav>
    <!--=====================================
                NAVBAR PART END
    =======================================-->
    <!--=====================================
              NAV SIDEBAR PART START
    =======================================-->
    <aside class="nav-sidebar">
        <div class="nav-header">
            <a asp-area="" asp-controller="Home" asp-action="Index"><img src="~/theme/yediginibil.png" alt="logo"></a>
            <button class="nav-close"><i class="icofont-close"></i></button>
        </div>
        <div class="nav-content">
            <ul class="nav-list">
                <li>
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="nav-link">Anasayfa</a>
                </li>
                <li>
                    <a class="nav-link dropdown-link" href="#"><i class="icofont-home"></i>Home</a>
